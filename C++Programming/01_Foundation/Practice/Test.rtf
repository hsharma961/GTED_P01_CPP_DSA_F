#include <iostream>
#include <string>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    double current_value = 0;
    string unit = "";
    double smallest = 0;
    double largest = 0;
    bool first = true; // To initialize smallest/largest

    // Conversion factors to meters
    constexpr double cm_to_m = 0.01;
    constexpr double in_to_m = 2.54 * cm_to_m;
    constexpr double ft_to_m = 12 * in_to_m;

    while (cin >> current_value >> unit) {
        double converted_value = 0;

        if (unit == "m") {
            converted_value = current_value;
        } else if (unit == "cm") {
            converted_value = current_value * cm_to_m;
        } else if (unit == "in") {
            converted_value = current_value * in_to_m;
        } else if (unit == "ft") {
            converted_value = current_value * ft_to_m;
        } else {
            cout << "Invalid unit: " << unit << "\n";
            continue; // Skip the rest of the loop for invalid units
        }

        if (first) {
            smallest = converted_value;
            largest = converted_value;
            first = false;
            cout << current_value << unit << " is the first value (both smallest and largest).\n";
        } else {
            if (converted_value < smallest) {
                smallest = converted_value;
                cout << current_value << unit << " is the smallest so far.\n";
            }
            if (converted_value > largest) {
                largest = converted_value;
                cout << current_value << unit << " is the largest so far.\n";
            }
        }
    }
    return 0;
}
